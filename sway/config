### media controls

# volume
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioRaiseVolume exec [ $(pactl -- get-sink-volume @DEFAULT_SINK@ | awk -F'/' '{print $2}' | sed 's/[^0-9]*//g') -lt 100 ] && pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym --whole-window $mod+Shift+button4 exec [ $(pactl -- get-sink-volume @DEFAULT_SINK@ | awk -F'/' '{print $2}' | sed 's/[^0-9]*//g') -lt 100 ] && pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym --whole-window $mod+Shift+button5 exec pactl set-sink-volume @DEFAULT_SINK@ -5%


# bindsym XF86Tools exec imv ${XDG_CONFIG_HOME}/sway/backgrounds/cat.png -s crop
# bindsym XF86Tools exec $term --command htop & imv ${XDG_CONFIG_HOME}/sway/backgrounds/cat.png -s crop
bindsym XF86Tools exec pavucontrol

# printscreen
# bindsym $mod+n exec grim -g "$($XDG_CONFIG_HOME/sway/wl-select)" - | wl-copy
# bindsym Print exec $term
bindsym Print exec grim -g "$($XDG_CONFIG_HOME/sway/wl-select)" - | wl-copy

# brightness
bindsym XF86MonBrightnessDown exec light -U 5
bindsym XF86MonBrightnessUp exec light -A 5
bindsym --whole-window $mod+button5 exec light -U 5
bindsym --whole-window $mod+button4 exec light -A 5

include /etc/sway/config.d/*

exec_always ${XDG_CONFIG_HOME}/sway/trans.py

# this applet has shitty icons. They can be changed by copying /usr/share/icons/hicolor/22x22/apps
# to ~/.local/share/icons/hicolor/22x22/apps and changing the nm-* icons. I dont know how to make it fall back
# to /usr/local/share/icons/hicolor/scalable, which are also part of the install network-manager-applet
exec_always nm-applet --indicator

