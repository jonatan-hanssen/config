# Logo key. Use Mod1 for Alt.
set $mod Mod1
set $left h
set $down j
set $up k
set $right l
set $term alacritty
set $menu wofi -I --show drun

font pango:SourceCodePro Medium 13

### Output configuration
output * bg $XDG_CONFIG_HOME/sway/backgrounds/pattern.png fill
#
# Example configuration:
#
#   output HDMI-A-1 resolution 1920x1080 position 1920,0
#
# You can get the names of your outputs by running: swaymsg -t get_outputs

### Idle configuration
exec swayidle -w \
         timeout 900 'swaylock' \
         timeout 1500 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
         before-sleep 'swaylock'
### Key bindings
bindsym $mod+Return exec $term
bindsym $mod+o exec $term
# bindsym $mod+x kill
# i is for incinerate
bindsym $mod+i kill
# bindsym button2 exec $term
# bindsym $mod+d exec pgrep wofi >/dev/null 2>&1 && killall wofi || wofi -I --show drun
# n is for meNu
bindsym $mod+n exec pgrep wofi >/dev/null 2>&1 && killall wofi || wofi -I --show drun
bindsym $mod+Shift+d exec wofi --show run

# Drag floating windows by holding down $mod and left mouse button.
floating_modifier $mod normal

# Reload the configuration file
bindsym $mod+Shift+r reload

# Exit sway (logs you out of your Wayland session)
bindsym $mod+Shift+e exec swaymsg exit

# Lock pc
bindsym $mod+p exec swaylock

# Moving around:
# Move your focus around
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# Move the focused window with the same, but add Shift
bindsym $mod+Shift+$left move left 30px
bindsym $mod+Shift+$down move down 30px
bindsym $mod+Shift+$up move up 30px
bindsym $mod+Shift+$right move right 30px

# Workspaces:

# Switch to workspace
bindsym $mod+a workspace number 1
bindsym $mod+r workspace number 2
bindsym $mod+s workspace number 3
bindsym $mod+t workspace number 4
bindsym $mod+d workspace number 5
bindsym $mod+z workspace number 6
bindsym $mod+x workspace number 7
bindsym $mod+c workspace number 8
# bindsym $mod+9 workspace number 9
# bindsym $mod+0 workspace number 10

# # Move focused container to workspace
bindsym $mod+Ctrl+a move container to workspace number 1
bindsym $mod+Ctrl+r move container to workspace number 2
bindsym $mod+Ctrl+s move container to workspace number 3
bindsym $mod+Ctrl+t move container to workspace number 4
bindsym $mod+Ctrl+d move container to workspace number 5
bindsym $mod+Ctrl+z move container to workspace number 6
bindsym $mod+Ctrl+x move container to workspace number 7
bindsym $mod+Ctrl+c move container to workspace number 8
# bindsym $mod+Shift+9 move container to workspace number 9
# bindsym $mod+Shift+0 move container to workspace number 10

bindsym $mod+left resize shrink width 20px
bindsym $mod+down resize grow height 20px
bindsym $mod+up resize shrink height 20px
bindsym $mod+right resize grow width 20px

# Layout stuff:

# You can "split" the current object of your focus with
# $mod+b or $mod+v, for horizontal and vertical splits
# respectively.
bindsym $mod+b splith
bindsym $mod+v splitv

# bindsym $mod+Shift+h move to parent

# Switch the current container between different layout styles
# bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Make the current focus fullscreen
bindsym $mod+f fullscreen


# bindsym $mod+z exec imv ~/Documents/keymap.png

# Toggle the current focus between tiling and floating mode
bindsym $mod+space floating toggle

# Swap focus between the tiling area and the floating area
bindsym $mod+Shift+space focus mode_toggle

# Move focus to the parent container
bindsym $mod+q exec /home/jona/.config/sway/anti_container.sh
# bindsym $mod+Shift+a focus parent

# Scratchpad:

# Sway has a "scratchpad", which is a bag of holding for windows.
# You can send windows there and get them back later.

# Move the currently focused window to the scratchpad
bindsym $mod+m move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+g scratchpad show

# bindsym $mod+up exec playerctl play-pause
# bindsym $mod+right exec playerctl next
# bindsym $mod+left exec playerctl previous


bindsym $mod+BackSpace input "type:keyboard" xkb_switch_layout next
# Status Bar:

bar {
	swaybar_command waybar
}

# input section
input type:keyboard {
	# xkb_layout "colemak_jk_iso,colemak_jk,us,no"
	xkb_layout "colemak_jk_iso,no"
	# xkb_variant ",altgr-intl,"
	repeat_delay 300
	repeat_rate 27
	xkb_options caps:escape
}

input type:pointer {
	pointer_accel 0.3
	accel_profile "flat"
}

input type:touchpad {
	pointer_accel 0.3
    scroll_factor 0.6
	tap enabled
}

